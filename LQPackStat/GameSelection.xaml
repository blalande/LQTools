<Window x:Class="LQPackStat.GameSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LQPackStat"
        mc:Ignorable="d"
        Title="Export des Fiches de scores" Height="450" Width="300">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="400*"/>
      <RowDefinition Height="28"/>
    </Grid.RowDefinitions>
    <ListBox HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" SelectionMode="Multiple" x:Name="lstGames" Grid.Row="0"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
      <Button x:Name="btnGame" Content="Game" HorizontalAlignment="Right" Margin="2,0,0,0" VerticalAlignment="Top" Width="75" Click="btnGame_Click"/>
      <Button x:Name="btnDetail" Content="Score Cards" HorizontalAlignment="Right" Margin="2,0,0,0" VerticalAlignment="Top" Width="75" Click="btnDetail_Click"/>
      <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Right" Margin="2,0,0,0" VerticalAlignment="Top" Width="75" Click="btnClose_Click" />
    </StackPanel>

  </Grid>
</Window>
